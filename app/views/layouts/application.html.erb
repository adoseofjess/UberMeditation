<!DOCTYPE html>
<html>
<head>
  <title>UberMeditation</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <audio id="audio" src="http://www.buddhanet.net/filelib/audio/gong-burmese.wav" autostart="false" ></audio>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand brandtext"><%= link_to "Uber Meditation", landing_static_pages_path %></span></div>
    </div>
    <ul class="nav navbar-nav">
      <li class="nav-item"> 
        <%= link_to "Learn", home_static_pages_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Practice", new_meditation_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Reflect", root_path %>
      </li>
      <li class="nav-item">
        <%= link_to "About the Project", root_path %>
      </li>
    </ul>
  </div>
</nav>

<%- if flash[:notice] -%>
  <div class="alert alert-info" role="alert">
    <%= flash[:notice].html_safe %>
  </div>
<%- end -%>
<%- if flash[:alert] -%>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert].html_safe %>
  </div>
<%- end -%>
<%= yield %>

</body>
</html>
